<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_accident" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/accident_threshold_set"
            android:textAlignment="center"
            android:textColor="@color/xxxxgray"
            android:theme="@style/TitleTypo" />

        <com.xw.repo.BubbleSeekBar
            android:id="@+id/thresholdSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            app:bsb_bubble_color="@color/accent_orange"
            app:bsb_bubble_text_color="@color/white"
            app:bsb_max="@integer/threshold_seekbar_min"
            app:bsb_min="@integer/threshold_seekbar_max"
            app:bsb_progress="@integer/threshold_seekbar_progress_def"
            app:bsb_second_track_color="@color/accent_orange"
            app:bsb_section_count="@integer/threshold_seekbar_section_count"
            app:bsb_section_text_position="below_section_mark"
            app:bsb_seek_step_section="true"
            app:bsb_show_section_mark="true"
            app:bsb_show_thumb_text="true"
            app:bsb_touch_to_seek="true"
            app:bsb_track_color="@color/accent_orange" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/accident_threshold_description"
            android:textColor="@color/xxxgray"
            android:theme="@style/BodyTypo" />
    </LinearLayout>

</RelativeLayout>