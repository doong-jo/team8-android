<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/detailDialog"
    android:visibility="visible"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_marginBottom="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bookmarkToggle"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_bookmark_black"
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <ImageView
            android:id="@+id/dlgImageLED"
            app:layout_constraintTop_toBottomOf="@id/bookmarkToggle"
            android:layout_gravity="center_horizontal"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:scaleType="centerInside"
            android:src="@drawable/bird" />
    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <ImageView
            android:src="@drawable/ic_line_palette"
            android:scaleType="centerInside"
            android:layout_marginEnd="10dp"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ledCreatorText"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/OptionTypo"
            android:textColor="@color/black"
            android:alpha="0.79"
            android:text="Team 8"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <ImageView
            android:src="@drawable/ic_cloud_download_black"
            android:scaleType="centerInside"
            android:layout_marginEnd="10dp"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ledDownloadCnt"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/OptionTypo"
            android:textColor="@color/black"
            android:alpha="0.79"
            android:text="2,140"/>
    </LinearLayout>

</LinearLayout>