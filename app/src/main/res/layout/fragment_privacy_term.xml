<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/loginBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <View
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="1dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/privacy_term"
                android:textSize="@dimen/s_text_size"
                android:textColor="@color/softBlackColor"/>

            <View
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="1dp" />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm_privacy_term"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/s_text_size"
            android:textStyle="bold"
            android:background="@color/colorAccent"
            android:layout_marginTop="@dimen/s_space_size"
            android:layout_marginBottom="@dimen/s_space_size"
            android:onClick="moveToJoinFragment"/>
    </LinearLayout>



</ScrollView>