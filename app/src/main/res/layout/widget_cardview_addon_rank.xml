<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardLayout"
    style="@style/ledCardRankLayout">

    <android.support.v7.widget.CardView
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="12dp"
        style="@style/ledCardRank">
        <ImageView
            android:id="@+id/rankCardImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bird" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/rankNumTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:textColor="@color/xgray"
        style="@style/OptionTypo"
        android:text="@string/RankNum" />

    <TextView
        android:id="@+id/rankCardNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="14dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:textColor="@color/xgray"
        style="@style/OptionTypo"
        android:text="@string/RankName" />
</LinearLayout>

