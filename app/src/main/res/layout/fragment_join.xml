<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/loginBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:weightSum="1">
        <View
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="1dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                android:focusableInTouchMode="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/xx_text_size"
                    android:textColor="@color/softBlackColor"
                    android:text="@string/service_name"
                    android:layout_marginBottom="@dimen/xx_space_size" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/s_space_size"
                    android:hint="@string/join_id_edittext_hint"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/s_space_size"
                    android:hint="@string/join_pw_edittext_hint"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/s_space_size"
                    android:hint="@string/join_pw_chk_edittext_hint"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/s_space_size"
                    android:hint="@string/join_name_edittext_hint"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/xs_space_size">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/s_text_size"
                        android:layout_marginEnd="@dimen/xs_space_size"
                        android:textColor="@color/softBlackColor"
                        android:text="@string/accept_join_term_f" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/s_text_size"
                        android:textColor="@color/colorAccent"
                        android:text="@string/term"
                        android:onClick="moveToPrivacyTermFragment"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/s_text_size"
                        android:textColor="@color/softBlackColor"
                        android:layout_marginStart="@dimen/xs_space_size"
                        android:text="@string/accept_join_term_e" />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/join_button_text"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/s_text_size"
                    android:textStyle="bold"
                    android:background="@color/colorAccent"
                    android:layout_marginTop="@dimen/s_space_size"
                    android:layout_marginBottom="@dimen/s_space_size"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/s_space_size"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/xs_space_size"
                        android:textSize="@dimen/s_text_size"
                        android:textColor="@color/softBlackColor"
                        android:text="@string/suggest_login" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/xs_space_size"
                        android:textStyle="bold"
                        android:textSize="@dimen/s_text_size"
                        android:textColor="@color/colorAccent"
                        android:text="@string/login"
                        android:onClick="moveToLoginFragment"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="1dp" />
    </LinearLayout>
</RelativeLayout>