<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.ahmadrosid.library.FloatingLabelEditText
        android:id="@+id/floatingLblEditTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:focusable="false"
        app:editText_color="@color/xxxgray"/>

    <Button
        android:id="@+id/controlBtn"
        android:layout_marginTop="2.28dp"
        android:layout_width="18.24dp"
        android:layout_height="18.24dp"
        android:layout_marginEnd="17.1dp"
        android:visibility="invisible"
        android:layout_gravity="end|center_vertical"
        android:background="@drawable/ic_delete" />

</FrameLayout>