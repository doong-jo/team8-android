<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/searchItemLayout"
    >
    <android.support.v7.widget.CardView
        android:layout_marginStart="11.4dp"
        android:layout_marginEnd="11.4dp"
        android:layout_marginTop="11.4dp"
        android:layout_marginBottom="11.4dp"
        android:layout_gravity="center_vertical"
        style="@style/ledCardSearch">

        <ImageView
            android:id="@+id/searchCardImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bird" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/searchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="title"
        android:theme="@style/CategoryCardTitleTypo"
        />

    <TextView
        android:id="@+id/searchType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="11.4dp"
        android:text="type"
        android:theme="@style/BodyTypo"
        android:textColor="@color/black"
        android:alpha="0.49"
        />
</LinearLayout>