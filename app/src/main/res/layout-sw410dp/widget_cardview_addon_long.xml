<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ledCardLongLayout">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        style="@style/ledCardLong"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/cardViewBlue">

        <TextView
            android:id="@+id/cardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="14.82dp"
            android:layout_marginStart="20.52dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:theme="@style/TitleTypo"
            android:text="@string/cardview_character" />

        <ImageView
            android:layout_width="93.48dp"
            android:layout_height="93.48dp"
            android:layout_gravity="right"
            android:layout_marginBottom="28.5dp"
            android:layout_marginEnd="11.4dp"
            android:layout_marginTop="31.92dp"
            android:src="@drawable/bird" />
    </android.support.v7.widget.CardView>


</FrameLayout>

