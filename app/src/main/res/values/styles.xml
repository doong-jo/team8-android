    </style>

    <style name="SnackBarTypo" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">11dp</item>
    </style>

    <!--Light-->
    <style name="LightTypo" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">11dp</item>
    </style>

    <style name="wideCard" parent="CardView">
