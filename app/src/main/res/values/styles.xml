<resources>

    <!-- Base application theme. -->


    <style name="MyTheme" parent="Theme.AppCompat">
    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/half_black</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/xxxgray</item>
        <item name="colorAccent">@color/accent_orange</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>

        <!--statusBar Background-->
        <item name="android:statusBarColor">@color/gray</item>
        <!--statusBar TextColor-->
        <item name="android:windowLightStatusBar">true</item>

        <item name="windowActionBar">true</item>x
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBar">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Buttons-->
    <style name="PrimaryButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:layout_width">192dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textAppearance">@style/CategoryCardTitleTypo</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="BlockButton" parent="android:Widget.Button">
        <item name="android:width">192dp</item>
        <item name="android:color">#DFE0E2</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:radius">11dp</item>
    </style>

    <!--Typo-->

    <!--Bold-->
    <style name="HeadlineTypo" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="HyoertextTypo" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/accent_blue</item>
    </style>

    <style name="HyoertextSmallTypo" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/accent_blue</item>
    </style>

    <style name="OptionAccentTypo" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">13dp</item>
    </style>

    <!--Medium-->
    <style name="TitleTypo" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="CategoryCardTypo" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="CategoryCardTitleTypo" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
