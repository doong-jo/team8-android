    </style>

    <!--Regular-->
    <style name="ToolbarTitleTypo" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">19dp</item>
    </style>

    <style name="OptionBigTypo" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="OptionTypo" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
